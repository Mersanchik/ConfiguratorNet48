<Window x:Class="Configurator.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Configurator.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        Title="Помощь" Height="500" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="5 0 5 0">
                <TextBlock Text="Сервисные команды:" FontWeight="Bold" FontSize="19" Foreground="Blue" TextWrapping="Wrap"/>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Закрыть терминал (exit)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- закрывает терминал для контроллера в режиме датчика."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Запрет закрытия терминала (exit 0)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- предотвращает автоматический выход из терминала в режиме датчика."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Считать конфигурацию (cnf)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- просмотр текущей конфигурации, которая записана в устройство."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Редактировать конфигурацию (cnf 1)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- запускает процесс редактирования конфигурации."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Считать время (rtc)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- просмотр текущего времени, установленного в часах реального времени в контроллере."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" с."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Установить время (rtc 1)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- установка времени в часы реального времени. При превышении значения 2147483647,"/>
                    <Run Text="контроллер зависает до перезагрузки."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон:" FontStyle="Italic"/>
                    <Run Text=" от 0 до 2147483647"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Единицы измерения:" FontStyle="Italic"/>
                    <Run Text="с."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Приведение результатов (adc)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- вывод текущих результатов AKB, VE, ES, BH1750, RF_rssi."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Информация о ЧЯ (bbox)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- информация о ЧЯ: FLM_RET, BBOX_STAT."/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap" TextDecorations="Underline">
                    <Run Text="'Данные из ЧЯ (bbox N C)'" FontWeight="Bold" FontSize="16"/>
                    <Run Text="- вывод данных ЧЯ, где N - номер записи, C - количество записей для вывода."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="220 5 0 0" TextWrapping="Wrap">
                    <Run Text="• При вводе N == -1 происходит инициализация ЧЯ;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="220 5 0 0" TextWrapping="Wrap">
                    <Run Text="• При вводе N == -2 происходит формирование ЧЯ;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон:" FontStyle="Italic"/>
                    <Run Text="N: от -2 до 2147483647"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="70 5 0 0" TextWrapping="Wrap">
                    <Run Text="C: от 0 до 2147483647"/>
                </TextBlock>




                <TextBlock Text="Параметры конфигурации:" FontWeight="Bold" FontSize="19" Foreground="Blue" TextWrapping="Wrap"
                           Margin="0 30 0 0"/>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Эти параметры используются при вызове команд 'Считать конфигурацию (cnf)' и 'Редактировать конфигурацию (cnf 1)'." 
                         FontWeight="Bold" FontSize="14"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ниже представлено описание каждого параметра:" 
                         FontWeight="Bold" FontSize="14"/>
                </TextBlock>

                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="ROLE" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- параметр задаёт роль устройства."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" от 1 до 2."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Примечание:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" устанавливает роль устройства, где 1 - коптер, 2 - датчик."/>
                </TextBlock>


                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="INFO" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- в зависимости от роли устройства:"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• установка задержки ответа для датчика;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• установка периода запроса для коптера."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" от 0 до 2147483647."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" мс."/>
                </TextBlock>


                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="ack_range" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- в зависимости от роли устройства:"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• количество просмотра неподтверждённых записей для датчика;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• не используется для коптера."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" от 0 до 2147483647."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>


                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="TERM" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- в зависимости от роли устройства:"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• задержка перед закрытием терминала для датчика;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• не используется для коптера."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" от 0 до 2147483647."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" с."/>
                </TextBlock>


                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="RF" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- частота радиоканала, на котором будет работать устройство."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" Гц."/>
                </TextBlock>


                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Hold_rssi" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- в зависимости от роли устройства:"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• пороговый уровень сигнала наличия несущей для датчика;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• не используется для коптера."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" нет."/>
                </TextBlock>


                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="MEAS" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
                    <Run Text="- в зависимости от роли устройства:"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• интервал между измерениями для датчика;"/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="40 5 0 0" TextWrapping="Wrap">
                    <Run Text="• не используется для коптера."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Диапазон значений:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" от 0 до 2147483647."/>
                </TextBlock>
                <TextBlock FontSize="14" Margin="0 5 0 0" TextWrapping="Wrap">
                    <Run Text="Ед. изм.:" FontStyle="Italic" FontSize="14"/>
                    <Run Text=" с."/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
